---
import logo from "../assets/img/logo_rte_montacargas.png";
import NavMenu from "./NavMenu.astro";
---

<section class="container-header" id="contact">
	<div class="container header-contact">
		<div id="content-html">
			Tel: 81 1550 3100 / Whatsapp: 52 81 3402 4241 / Email:
			ventas@losmontacargas.mx
		</div>
	</div>
</section>

<section id="container-section-blank"></section>
<section id="container-header-content">
	<div class="container">
		<div class="row">
			<div class="col-2 col-content">
				<a href="/">
					<img
						src={logo.src}
						alt="Logo de Montacargas"
						class="logo"
					/>
				</a>
			</div>
			<div
				class="col-9 d-flex align-items-center"
				style="padding-left: 0px;"
			>
				<div class="search-form">
					<div class="input-group">
						<input
							type="text"
							class="form-control input-search"
							placeholder="Buscar..."
							aria-label="Buscar"
						/>
						<span class="input-group-text"
							><i class="fas fa-search"></i></span
						>
					</div>
				</div>
			</div>
			<div class="col-1"></div>
		</div>
	</div>
</section>
<section>
	<NavMenu />
</section>

<style is:inline>
	#container-section-blank {
		height: 0px;
	}
	#container-header-content {
		z-index: 20;
		height: 110px !important;
		background-color: rgba(255, 255, 255, 0.9);
	}
	.input-search {
		width: 100%;
		max-width: 100%;
		color: #313131;
		padding: 6px;
		padding-right: 6px;
		line-height: 30px;
		display: block;
		font-size: 12px;
		position: relative;
		z-index: 2;
		-webkit-appearance: none;
		height: 100%;
		min-height: inherit;
		margin: 0 !important;
		border: 1px solid #d8d8d8;
		outline: 0;
		border-radius: 0;
	}
	.col-content {
		justify-content: flex-start;
		padding: 20px 0px;
		align-items: center;
		display: inline-flex;
	}
	.search-form {
		width: 93%;
	}
	div {
		font-style: inherit;
		font-weight: inherit;
	}
	.container-header {
		background-color: #ff1414;
		color: #fff;
		font-size: 17px;
	}
	.container {
		position: relative;
		margin-left: auto;
		margin-right: auto;
		padding-left: 20px;
		padding-right: 20px;
		max-width: 1300px;
		width: 100%;
		box-sizing: border-box;
	}
	.header-contact {
		padding-right: 0px;
		padding-left: 0px;
	}

	#content-html {
		line-height: 35px;
		font-weight: lighter;
	}
	.logo {
		max-width: 145px;
		height: auto;
	}
	img {
		vertical-align: middle;
		border-style: none;
	}
	.input-group-text {
		background-color: #ff1414;
		color: #fff;
		border-radius: 0;
	}
</style>
<script is:inline>
	window.addEventListener("scroll", function () {
		var divUno = document.getElementById("contact");
		var divDos = document.getElementById("container-header-content");
		var divSpace = document.getElementById("container-section-blank");
		var rect = divUno.getBoundingClientRect();

		// Si el div con id "uno" est√° fuera de la vista (en el scroll hacia abajo)
		if (rect.bottom <= 0) {
			divDos.style.position = "fixed";
			divDos.style.top = "0";
			divDos.style.left = "0";
			divDos.style.right = "0";
			divSpace.style.height = "110px";
		} else {
			divDos.style.position = "relative";
			divDos.style.top = "0";
			divSpace.style.height = "0px";
		}
	});
</script>
